<Window x:Class="MediaCrush.UpdateDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Details" Height="300" Width="500" Icon="mediacrush.ico"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <WebBrowser x:Name="updateInfo" Grid.ColumnSpan="3"></WebBrowser>
        <Button Margin="5" Grid.Row="1" Grid.Column="1" Width="100" Click="Cancel_Click">Cancel</Button>
        <Button Margin="5" Grid.Row="2" Grid.Column="2" Width="100" Click="Apply_Click">Apply</Button>
    </Grid>
</Window>
